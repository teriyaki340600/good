<% if @book.errors.any? %>
  <ul>
  		<li>error</li>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: current_user, book: @book %>
		<!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

		<h2>New book</h2>
		<%= render 'books/newform', user: current_user, book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to book.user do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					<td><%= book.body %></td>
					<td>
						<% if book.favorited_by?(current_user) %>
    					<%= link_to book_favorites_path(book, number_favorite: "2"), method: :delete do %>
      					<i class="glyphicon glyphicon-heart fa fa-heart button" aria-hidden="true" style="color: red;"></i>
      					<%= book.favorites.count %>
    					<% end %>
						<% else %>
						  <%= link_to book_favorites_path(book, number_favorite: "2"), method: :post do %>
						    <i class="glyphicon glyphicon-heart fa fa-heart-o button" aria-hidden="true" ></i>
					      <%= book.favorites.count %>
					    <% end %>
						<% end %>
					</td>
					<td>
						コメント数：<%= book.book_comments.count %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>

		<!--books一覧 -->


	</div>
</div>